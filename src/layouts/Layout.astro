---
import Footer from "../components/layout/Footer.astro";
import Header from "../components/layout/Header.astro";
import "../styles/global.css";
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Portafolio | Luis Araya</title>
    <meta
      name="description"
      content="Portafolio de Luis Araya: desarrollo web moderno, automatizaciÃ³n y experiencias digitales de alto impacto."
    />
    <script is:inline>
      const storedTheme = localStorage.getItem("theme");
      if (storedTheme === "dark") {
        document.documentElement.classList.add("dark");
      }
    </script>
  </head>
  <body class="relative min-h-screen overflow-x-hidden antialiased">
    <div class="pointer-events-none fixed inset-0 -z-10">
      <div class="absolute left-[5%] top-[-10%] h-80 w-80 rounded-full bg-cyan-400/15 blur-[140px]"></div>
      <div class="absolute right-[5%] top-[20%] h-72 w-72 rounded-full bg-amber-300/10 blur-[140px]"></div>
      <div class="absolute bottom-[-10%] left-1/3 h-80 w-80 rounded-full bg-sky-500/12 blur-[160px]"></div>
    </div>
    <Header />
    <main class="relative z-10">
      <slot />
    </main>
    <Footer />
  </body>
</html>
