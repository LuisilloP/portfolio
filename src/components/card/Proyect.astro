---
import type { ProyectInterface } from "../../Interfaces/Interfaces";

const { name, image, text, tecnologies, url, img_position } =
  Astro.props as ProyectInterface;
---

<div
  class="group relative grid overflow-hidden rounded-3xl border border-[var(--border-color)] bg-[var(--bg-card)] shadow-[var(--shadow-elevated)] lg:grid-cols-[1.05fr_.95fr]"
>
  <div
    class="relative order-1 flex min-h-[260px] items-center justify-center bg-gradient-to-br from-cyan-400/5 via-transparent to-amber-300/5 p-4"
    class:list={{
      "lg:order-2": img_position === "reverse",
    }}
  >
    <div class="absolute inset-0 bg-[radial-gradient(circle_at_40%_30%,rgba(6,182,212,0.15),transparent_45%)]"></div>
    <img
      class="relative h-full w-full max-h-[420px] rounded-2xl border border-[var(--border-color)] object-cover transition duration-300 group-hover:scale-[1.02] group-hover:shadow-xl"
      src={image}
      alt={`Imagen página web ${name}`}
      loading="lazy"
    />
  </div>

  <div
    class="order-2 flex flex-col gap-4 p-6 sm:p-8"
    class:list={{
      "lg:order-1": img_position === "reverse",
    }}
  >
    <div class="flex items-center gap-3">
      <span class="pill">Proyecto destacado</span>
      <span class="text-sm font-semibold text-[var(--text-secondary)]">UX · Performance · Accesibilidad</span>
    </div>
    <h3 class="text-2xl font-semibold text-[var(--text-primary)]">{name}</h3>
    <p class="text-[var(--text-secondary)]">{text}</p>

    <div class="flex flex-wrap gap-2">
      {tecnologies.map((tecno) => (
        <span class="tech-badge">{tecno}</span>
      ))}
    </div>

    <div class="flex items-center gap-3">
      <a class="btn-primary" href={url} target="_blank" rel="noreferrer">
        Visitar proyecto
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 12h14m-4-4l4 4-4 4" />
        </svg>
      </a>
      <span class="text-sm font-semibold text-[var(--text-secondary)]">Optimizado para desktop y mobile</span>
    </div>
  </div>
</div>
